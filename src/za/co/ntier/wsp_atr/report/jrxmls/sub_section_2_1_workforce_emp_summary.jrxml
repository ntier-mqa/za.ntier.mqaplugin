    <!-- Query -->
    <queryString language="SQL">
        <![CDATA[
SELECT
    occ.Value AS ofo_code,
    occ.Name  AS ofo_description,
    t.ZZ_African_Male_Cnt,
    t.ZZ_African_Female_Cnt,
    t.ZZ_Coloured_Male_Cnt,
    t.ZZ_Coloured_Female_Cnt,
    t.ZZ_Indian_Male_Cnt,
    t.ZZ_Indian_Female_Cnt,
    t.ZZ_White_Male_Cnt,
    t.ZZ_White_Female_Cnt,
    t.ZZ_Total_Male_Cnt,
    t.ZZ_Total_Female_Cnt,
    t.ZZ_Disabled_Cnt,
    t.ZZ_NonSA_Cnt,
    t.ZZ_Age_U35_Cnt,
    t.ZZ_Age_35_55_Cnt,
    t.ZZ_Age_O55_Cnt
FROM ZZ_WSP_ATR_WorkForce_Profile_Emp_Summ_Rep t
LEFT JOIN ZZ_Occupations_Ref occ
       ON occ.ZZ_Occupations_Ref_ID = t.OFO_Occupation_Code_ID
WHERE t.ZZ_WSP_ATR_Report_ID = $P{ZZ_WSP_ATR_Report_ID}
ORDER BY occ.Value
        ]]>
    </queryString>

